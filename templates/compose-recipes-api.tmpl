{{{define "recipes-api"}}}
    recipes-api:
        environment:
            - http_proxy={{{get . "HTTP_PROXY"}}}
            - https_proxy={{{get . "HTTPS_PROXY"}}}
            - "SERVICEDEPENDENCIES_UMSHOST={{{get . "UMS_HOST"}}}"
            - "SERVICEDEPENDENCIES_UMSPORT={{{get . "UMS_PORT"}}}"
            - "SERVICEDEPENDENCIES_CLOUDBREAKHOST={{{get . "CLOUDBREAK_HOST"}}}"
            - "SERVICEDEPENDENCIES_CLOUDBREAKPORT={{{get . "CB_PORT"}}}"
            - TELEMETRY_SERVICE_NAME=RecipesApi
            - DEBUG={{{get . "RECIPES_DEBUG"}}}
        {{{- if get . "RECIPES_API_TARGET_PATH"}}}
        volumes:
        - {{{get . "RECIPES_API_TARGET_PATH"}}}/dependency-hard-links:/thunderhead-recipes-api-service/lib
        - {{{get . "RECIPES_API_TARGET_PATH"}}}/thunderhead-recipes-api-service-0.1-SNAPSHOT.jar:/thunderhead-recipes-api-service/thunderhead-recipes-api-service-0.1-SNAPSHOT.jar
        {{{- end}}}
        labels:
            - traefik.port=8982
            - traefik.frontend.rule=PathPrefix:/api/v1/recipes/
            - traefik.backend=recipes-api-backend
            - traefik.frontend.priority=10
        ports:
            - {{{get . "RECIPES_API_DEBUG_PORT"}}}:5004
            - 8993:8982
            - {{{get . "RECIPES_API_HEALTHZ_PORT"}}}:8983
        networks:
            - {{{get . "DOCKER_NETWORK_NAME"}}}
        logging:
            options:
                max-size: "10M"
                max-file: "5"
        image: {{{get . "DOCKER_IMAGE_RECIPES_API"}}}:{{{get . "DOCKER_TAG_RECIPES_API"}}}
        deploy:
          resources:
            limits:
              memory: 1024M
              cpus: 1.0
{{{end}}}
